@page
@model MovieManagement_NguyenTuanVu.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}
@if (ViewData["Message"] != null)
{
    <h3 style="color:red">@ViewData["Message"]</h3>
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="productRequest.ProductId" />
            <input type="hidden" asp-for="productRequest.CategoryId" />
            <div class="form-group">
                <label asp-for="productRequest.ProductName" class="control-label"></label>
                <input asp-for="productRequest.ProductName" class="form-control" />
                <span asp-validation-for="productRequest.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productRequest.Weight" class="control-label"></label>
                <input asp-for="productRequest.Weight" class="form-control" />
                <span asp-validation-for="productRequest.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productRequest.UnitPrice" class="control-label"></label>
                <input asp-for="productRequest.UnitPrice" class="form-control" />
                <span asp-validation-for="productRequest.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productRequest.UnitsInStock" class="control-label"></label>
                <input asp-for="productRequest.UnitsInStock" class="form-control" />
                <span asp-validation-for="productRequest.UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Product">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
