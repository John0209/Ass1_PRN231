@page
@model eStoreClient.Pages.OrderPage.OrderDetailModel
@{
}
@if (ViewData["Message"] != null)
{
    <h3 style="color:red">@ViewData["Message"]</h3>
}
<div style="display:flex;">
    <button type="submit" class="btn btn-primary" style="margin-bottom:20px;">
        <a asp-page="/OrderPage/Order" style="color:white">Back Order</a>
    </button>
</div>

<h4>Order Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="orderDetail.OrderId" class="control-label"></label>
                <input readonly asp-for="orderDetail.OrderId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="orderDetail.ProductName" class="control-label"></label>
                <input readonly asp-for="orderDetail.ProductName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="orderDetail.UnitPrice" class="control-label"></label>
                <input readonly asp-for="orderDetail.UnitPrice" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="orderDetail.Quantity" class="control-label"></label>
                <input readonly asp-for="orderDetail.Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="orderDetail.Discount" class="control-label"></label>
                <input readonly asp-for="orderDetail.Discount" class="form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}